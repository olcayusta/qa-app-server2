{
  "ts-node": {
    "esm": true,
    "files": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": false,
    "moduleResolution": "Node",
    "removeComments": true,
    "pretty": true,
    "paths": {
      "@shared/*": [
        "src/models/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
